<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/back_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_white"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Payment Method"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/parent_card"
        android:layout_width="370dp"
        android:layout_height="265dp"
        android:layout_below="@id/back_title"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp">
            <TextView
                android:id="@+id/pilih_bioskop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pilih Bioskop"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pilihbioskop"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_below="@id/pilih_bioskop"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/orange">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cinema"
                        android:layout_gravity="center"/>
                    <Spinner
                        android:id="@+id/spinner_bioskop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/jenis_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_pilihbioskop"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pilih_jenis_seat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Jenis Seat"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pilih_jenis_seat"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/pilih_jenis_seat"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/orange">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/car_seat"
                                android:layout_gravity="center"/>
                            <Spinner
                                android:id="@+id/spinner_seat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/pilih_jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumlah"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pilih_jumlah"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_below="@+id/pilih_jumlah"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/orange">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/multiuser"
                                android:layout_gravity="center"/>
                            <Spinner
                                android:id="@+id/spinner_jumlah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tanggal_keberangkatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jenis_jumlah"
                android:layout_marginTop="10dp"
                android:text="Pilih Tanggal"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_tanggal_keberangkatan"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_below="@id/tanggal_keberangkatan"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/orange">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/date_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/calendar"/>
                    <TextView
                        android:id="@+id/date_input"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="dd/mm/yy"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/line1"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_below="@id/parent_card"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/rekap1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/jenis_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular Seat"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 35.000"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_marginLeft="195dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_below="@id/rekap1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/rekap2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/actual_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual Pay"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/pricetotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 35.000"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_marginLeft="210dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_below="@id/rekap2"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/add_payment"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:text="Add Payment"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:layout_marginTop="14dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/more_detail_payment"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/add_payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/payment_type"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/yellow"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/money"
                    android:layout_gravity="center"/>
                <Spinner
                    android:id="@+id/spinner_metode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/yellow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/bank"
                    android:layout_gravity="center"/>
                <Spinner
                    android:id="@+id/spinner_via"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/account"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Account"
        android:textColorHint="@color/black"
        app:startIconDrawable="@drawable/wallet"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/more_detail_payment"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/rekening"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/yellow"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/account"
        android:layout_marginTop="50px"
        android:text="ORDER"
        android:background="@color/grey"
        android:textColor="@color/white"
        android:textSize="25dp"
        />
</RelativeLayout>