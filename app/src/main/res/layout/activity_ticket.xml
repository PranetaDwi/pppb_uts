<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".TicketActivity">

    <LinearLayout
        android:id="@+id/back_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_white"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Order Summary"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/movie"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_title"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gambar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/doraemon"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/title_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DORAEMON"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/bioskop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XX1 Jogja City Mall"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/studio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Studio 10"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie"
        android:layout_centerHorizontal="true"
        android:text="Wednesday, 20 Nov 2023"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/detail_summary"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_time"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shopping"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Number"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000230399596879"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/reguler_seat"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/seat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reguler"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bill"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Transfer BNI"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/car_seat"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">>
                <TextView
                    android:id="@+id/seat_fee_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular Seat"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/price_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp35.000"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/money2"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convenience FEE"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/convenience_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp0"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>



        <View
            android:layout_width="340dp"
            android:layout_height="3dp"
            android:accessibilityTraversalBefore="@id/convenience_fee"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="160dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bill_total"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual Fee"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/actual_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp35.000"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>